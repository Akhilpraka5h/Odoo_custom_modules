<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_book_image_form" model="ir.ui.view">
        <field name="name">book.image.view.form</field>
        <field name="model">book.image</field>
        <field name="arch" type="xml">
            <form string="Book Images">
                <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Image Name"/>
                        <h2>
                            <field name="name" placeholder="Image Name"/>
                        </h2>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <div class="row">
                            <div class="col">
                                <field name="image" widget="image"/>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
    <record id="book_image_view_kanban" model="ir.ui.view">
        <field name="name">book.image.view.kanban</field>
        <field name="model">book.image</field>
        <field name="arch" type="xml">
            <kanban string="Book Images">
                <templates>
                    <t t-name="card" class="p-0 border-0">
                        <div class="card">
                            <div class="o_squared_image">
                                <field class="card-img-top" name="image"
                                       widget="x2_many_image"/>
                            </div>
                            <div class="p-2 m-0 bg-200"
                                 t-attf-title="#{record.name.value}">
                                <field name="name"
                                       class="small fs-5 text-truncate d-block"/>
                            </div>
                            <!-- below 100 Kb: good -->
                            <t t-if="record.image.raw_value.length &lt; 100*1000">
                                <t t-set="size_status"
                                   t-value="'text-bg-success'"/>
                                <t t-set="message">Acceptable file size</t>
                            </t>
                            <!-- below 1000 Kb: decent -->
                            <t t-elif="record.image.raw_value.length &lt; 1000*1000">
                                <t t-set="size_status"
                                   t-value="'text-bg-warning'"/>
                                <t t-set="message">Huge file size. The image
                                    should be optimized/reduced.
                                </t>
                            </t>
                            <!-- above 1000 Kb: bad -->
                            <t t-else="1">
                                <t t-set="size_status"
                                   t-value="'text-bg-danger'"/>
                                <t t-set="message">Optimization required! Reduce
                                    the image size or increase your compression
                                    settings.
                                </t>
                            </t>
                            <span t-attf-class="badge #{size_status} o_product_image_size"
                                  t-att-title="message"></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>