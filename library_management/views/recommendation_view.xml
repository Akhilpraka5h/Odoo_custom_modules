<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="recom_books_action" model="ir.actions.act_window">
        <field name="name">Recommendation</field>
        <field name="res_model">recommendation</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="recom_books_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">recommendation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="checkout_id"/>
                        <field name="book_title"/>
                        <field name="book_cover_image"/>
                        <field name="select_book"/>
                        <field name="recommendation_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="recom_books_list" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">recommendation</field>
        <field name="arch" type="xml">
            <list>
                        <field name="checkout_id"/>
                        <field name="book_title"/>
                        <field name="book_cover_image"/>
                        <field name="select_book"/>
            </list>
        </field>
    </record>
</odoo>