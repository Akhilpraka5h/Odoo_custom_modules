<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="book_genres_action" model="ir.actions.act_window">
        <field name="name">Genres</field>
        <field name="res_model">book.genre</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="book_genres_list" model="ir.ui.view">
        <field name="name">Genres</field>
        <field name="model">book.genre</field>
        <field name="arch" type="xml">
            <list>
                <field name="genre_name"/>
            </list>
        </field>
    </record>
    <record id="book_genres_form" model="ir.ui.view">
        <field name="name">Genres</field>
        <field name="model">book.genre</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="genre_name"/>
                    </group>
                    <group>
                        <field name="genre_desc"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>