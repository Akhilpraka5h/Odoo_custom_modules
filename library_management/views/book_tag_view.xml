<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="book_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">book.tag</field>
        <field name="view_mode">list</field>
    </record>
    <record id="book_tag_list" model="ir.ui.view">
        <field name="name">List</field>
        <field name="model">book.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom" sample="1">
                <field name="book_tag"/>
                <field name="tag_color" widget="color_picker"/>
            </list>
        </field>
    </record>
</odoo>